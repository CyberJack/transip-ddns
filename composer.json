    "homepage": "https://github.com/cyberjack/transip-ddns",
    "keywords": ["php", "api", "transip", "dns", "ddns"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Bottenberg",
            "email": "cyberjack77@gmail.com",
            "role": "Project developer"
        },
        {
            "name": "TransIP B.V.",
            "email": "support@transip.nl",
            "role": "Source files"
        }
    ],
    "require": {
        "php": ">=5.5.20",
        "ext-pdo_sqlite": "*",
        "ext-soap": "*",
        "ext-openssl": "*",
        "nikic/fast-route": "^1.0",
        "phpunit/php-text-template": "^1.2",
        "pimple/pimple": "^3.0",
        "hiddeco/transip": "^5.3"
    },
    "require-dev": {
        "jbzoo/pimpledumper": "^1.2"
